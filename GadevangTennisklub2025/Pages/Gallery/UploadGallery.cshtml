@page
@model GadevangTennisklub2025.Pages.Gallery.UploadGalleryModel
@{
    ViewData["Title"] = "Upload Billede";
}

<h2>Upload et Billede</h2>

<form method="post" enctype="multipart/form-data">
    <div>
        <label>Vælg Billede:</label>
        <input type="file" asp-for="PhotoFile" />
    </div>
    <div>
        <label>Beskrivelse:</label>
        <input type="text" asp-for="Description" />
    </div>
    <button type="submit">Upload</button>
</form>
<a asp-page="/Gallery/ShowGallery">Tilbage til Galleri</a>
<p>@Model.Message</p>
