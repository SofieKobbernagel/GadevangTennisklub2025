@page
@model GadevangTennisklub2025.Pages.Events.EventPageModel
@{
    ViewData["Title"] = "EventPage";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="@Model.e.Id" class="control-label" hidden="true"></label>
        <input asp-for="@Model.e.Id" class="form-control" hidden="true" readonly="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.e.Title" class="control-label" hidden="true"></label>
        <input asp-for="@Model.e.Title" class="form-control" hidden="true" readonly="true" />
    </div>
    <h1>@Model.e.Title</h1>
    <div class="form-group">
        <label asp-for="@Model.e.Date" class="control-label" ></label>
        <input asp-for="@Model.e.Date" class="form-control" readonly="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.e.Description" class="control-label" hidden="true"></label>
        <input asp-for="@Model.e.Description" class="form-control" hidden="true" readonly="true" />
    </div>
    @Model.e.Description
    <br>

    
        

    
    @if (HttpContext.Session.GetString("Member_Id") != null)
    {
        <div class="formgroup">
            <input type="submit" value="make event" class="btn btn-primary" />
        </div>

    }
    
</form>
