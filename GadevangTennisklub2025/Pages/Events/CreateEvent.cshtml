@page
@model GadevangTennisklub2025.Pages.Events.CreateEventModel
@{
    ViewData["Title"]="CreateEvent";
}

@if (ViewData["ErrorMessage"] != null)
{
    <script type="text/javascript">
        window.onload = function(){
            alert("@ViewData["ErrorMessage"]")

        }
    </script>
    ViewData["ErrorMessage"] = null;

}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="@Model.ev.Id" class="control-label"></label>
        <input asp-for="@Model.ev.Id" class="form-control" required="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.ev.Title" class="control-label"></label>
        <input asp-for="@Model.ev.Title" class="form-control" required="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.ev.Date" class="control-label"></label>
        <input asp-for="@Model.ev.Date" class="form-control" required="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.ev.Description" class="control-label"></label>
        <input asp-for="@Model.ev.Description" class="form-control" required="true" />
    </div>
    <div class="formgroup">
        <input type="submit" value="make event" class="btn btn-primary" />
    </div>
</form>
