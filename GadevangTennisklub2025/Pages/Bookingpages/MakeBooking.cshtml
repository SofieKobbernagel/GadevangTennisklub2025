@page
@model GadevangTennisklub2025.Pages.Bookingpages.MakeBookingModel
@{
    ViewData["Title"] = "MakeBooking";
}
<p style="color:red">@Model.Message</p>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="@Model.bo.Start" class="control-label"></label>
        <input asp-for="@Model.bo.Start" class="form-control" required="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.bo.Court_Id" class="control-label"></label>
        <input asp-for="@Model.bo.Court_Id" class="form-control" required="true" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.me" class="control-label"></label>
        <select asp-for="@Model.me" class="form-control"
                asp-items="@Model.ints">
        </select>
        <span asp-validation-for="@Model.me" class="text-danger"></span>
    </div>

   
    @if (bool.Parse(HttpContext.Session.GetString("IsAdmin")))
    {
        <div class="form-group">
            <label asp-for="@Model.bo.End" class="control-label"></label>
            <input asp-for="@Model.bo.End" class="form-control" required="true" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.bo.End" class="control-label"></label>
            <input asp-for="@Model.bo.End" class="form-control" required="true" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.bo.End" class="control-label"></label>
            <input asp-for="@Model.bo.End" class="form-control" required="true" />
        </div>
    } 
    <div class="formgroup">
        <input type="submit" value="make event" class="btn btn-primary" />
    </div>
</form>

