@page
@model GadevangTennisklub2025.Pages.Member.GetAllMembersModel
@{
}

<h4>Alle klubbens medlemmer</h4>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Billede</th>
            <th>Navn</th>
            <th>Alder</th>
            <th>Email</th>
            <th>Telefon</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Members != null)
        {
            foreach (var m in Model.Members)
            {
                <tr>
                    <td>
                        <a class="" type="button" title="Picture"
                           asp-page="GetMember" asp-route-userId="@m.Member_Id">@m.ProfileImagePath</a>
                    </td>
                    <td>
                        <a class="" type="button" title="More"
                           asp-page="GetMember" asp-route-userId="@m.Member_Id">@m.Name</a>
                    </td>
                    <td>
                        @m.Age
                    </td>
                    <td>
                        @m.Email
                    </td>
                    <td>
                        @m.Phone
                    </td>
                </tr>
            }
        }
    </tbody>
