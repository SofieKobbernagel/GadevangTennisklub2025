@page
@using Models;
@model GadevangTennisklub2025.Pages.Team.ShowTeamModel
@{
    ViewData["Title"] = "Klubbens Hold";
}

<h3>Klubbens Hold</h3>

<btn>
    <a class="nav-link text-dark bg-primary" asp-page="AddTeam">Opret nyt Hold</a>
</btn>


<form style="display: inline;" asp-page-handler="SignIn">
    <input type="submit" value="SignIn" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>Titel</th>
            <th>pladser tilbage</th>
            <th>Medlemskabstype</th>
            <th>Beskrivelse</th>
            <th>Dag</th>
            <th>Tidsrum</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Team item in Model.ListOfTeams)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.AttendeeRange[1] - item.Attendees.Count)</td>
                <td>@item.MembershipType</td>
                <td>@item.Description</td>
                <td>@item.DayOfWeek</td>
                <td>@item.TimeOfDay - @(item.TimeOfDay.Add(TimeSpan.FromHours(item.Length)))</td>

                <td>

                    <form style="display: inline;" asp-page-handler="Edit" asp-route-id="@item.Id">
                        <input type="image" src="~/Images/pencil-square.svg" />
                    </form>



                </td>

            </tr>
        }
    </tbody>
</table>
