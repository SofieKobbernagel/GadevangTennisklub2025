@page
@model GadevangTennisklub2025.Pages.TennisField.EditCourtModel
@{
    ViewData["Title"] = "Opdater Bane";
}

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Court.CourtId" class="control-label"></label>
        <input asp-for="@Model.Court.CourtId" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Court.Type" class="control-label"></label>
        <select asp-for="Court.Type" class="form-control"
                asp-items="@Model.SelectListCourts">
        </select>
        <span asp-validation-for="Court.Type" class="text-danger"></span>
    </div>
    <div class="formgroup">
        <input type="submit" value="Edit Hotel" class="btn btn-primary" />
    </div>
</form>