@page
@model GadevangTennisklub2025.Pages.TennisField.CreateCourtModel
@{
    ViewData["Title"] = "Tilføj Bane";
}

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Court.CourtId" class="control-label"></label>
        <input asp-for="@Model.Court.CourtId" class="form-control" />
        <span asp-validation-for="@Model.Court.CourtId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Court.Type" class="control-label"></label>
        <input asp-for="@Model.Court.Type" class="form-control" />
        <span asp-validation-for="@Model.Court.Type" class="text-danger"></span>
    </div>
    <p>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </p>
</form>