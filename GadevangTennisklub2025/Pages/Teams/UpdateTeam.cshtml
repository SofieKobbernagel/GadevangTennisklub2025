@page
@model GadevangTennisklub2025.Pages.Teams.UpdateTeamModel
@{
    ViewData["Title"] = "Update Team";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h1 class="text-center mt-4">Updater Hold</h1>

<div class="container mt-4 pb-5">
    <!-- Main form for updating and deleting -->
    <form method="post">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Team Information</h5>
                <hr />

                <div class="mb-3">
                    <label asp-for="Id" class="form-label">Hold ID</label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Hold Navn</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="MembershipType" class="form-label">Medlemskabstype</label>
                    <select asp-for="MembershipType" class="form-control" asp-items="Model.MembershipOptions">
                        <option value="">-- vælg et Medlemskabstype  --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="TrainerId" class="form-label">Træner</label>
                    <select asp-for="TrainerId" class="form-control" asp-items="Model.TrainerOptions">
                        <option value="">-- vælg en Træner --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="DayOfWeek" class="form-label">Dag På Ugen</label>
                    <select asp-for="DayOfWeek" class="form-select" asp-items="Model.DayOptions">
                        <option value="">-- Vælg en dag --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="TimeOfDay" class="form-label">Tid På Dagen</label>
                    <input asp-for="TimeOfDay" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Length" class="form-label">Længde I Antal Timer</label>
                    <input asp-for="Length" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="MinMember" class="form-label">Mindste Antal Medlemmer</label>
                    <input asp-for="MinMember" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="MaxMember" class="form-label">Højeste Antal Medlemmer</label>
                    <input asp-for="MaxMember" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Beskrivelse</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary" formaction="?handler=Update">Updater Hold</button>
                    <button type="submit" class="btn btn-danger" formaction="?handler=Delete">Fjern Hold</button>
                    <input type="hidden" name="AttendeeListTeamId" value="@Model.Id" />
                    <button type="submit" class="btn btn-secondary" formaction="?handler=UpdateAttendeeListId">
                        Se og rediger tilmeldte
                    </button>
                </div>
            </div>
        </div>
    </form>

    <!-- Form for updating attendee list -->

</div>
