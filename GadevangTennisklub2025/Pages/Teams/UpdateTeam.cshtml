@page
@model GadevangTennisklub2025.Pages.Teams.UpdateTeamModel
@{
}
<h1>Update Team</h1>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            

            <form method="post">
                <div class="card" style="border: 1px solid #ddd; position: relative; display: flex; flex-direction: column; justify-content: space-between;">
                    <div class="card-body">
                        <h5 class="card-title">Team Information</h5>
                        <hr style="border: 1px solid #ddd; margin-top: 5px; margin-bottom: 10px;">

                        <div class="mb-3">
                            <label class="form-label">Team Id</label>
                            <input type="text" class="form-control" value="@Model.Id" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Team Name</label>
                            <input type="text" class="form-control" asp-for="Name" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Team MembershipType</label>
                            <input type="text" class="form-control" asp-for="MembershipType" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Day of week</label>
                            <input type="text" class="form-control" asp-for="DayOfWeek" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Time of Day</label>
                            <input type="text" class="form-control" asp-for="TimeOfDay" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">session length (in hours)</label>
                            <input type="text" class="form-control" asp-for="Length" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Minnimum number of Attendees</label>
                            <input type="text" class="form-control" asp-for="MinMember" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Maximum number of Attendees</label>
                            <input type="text" class="form-control" asp-for="MaxMember" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <input type="text" class="form-control" asp-for="Description" />
                        </div>
                    </div>

                    <div class="position-relative" style="height: 60px; margin-top: auto; margin-bottom: 2px;">
                        <div style="position: absolute; top: 50%; left: 0%; width: 100%; transform: translateY(-120%); display: flex; justify-content: space-between; padding: 0 10%;">
                            <!-- Update Button -->
                            <form asp-page-handler="Update" asp-route-updateTeamId="@Model.Id" method="post">
                                <button type="submit" class="btn btn-primary" style="white-space: nowrap;">Update Team</button>
                            </form>

                            <!-- Delete Button -->
                            <form asp-page-handler="Delete" asp-route-deleteTeamId="@Model.Id" method="post">
                                <button type="submit" class="btn btn-danger" style="white-space: nowrap;">Delete Team</button>
                            </form>
                        </div>
                    </div>



                </div>
            </form>






        </div>
    </div>
</div>