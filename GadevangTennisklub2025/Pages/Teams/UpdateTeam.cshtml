@page
@model GadevangTennisklub2025.Pages.Teams.UpdateTeamModel
@{
    ViewData["Title"] = "Update Team";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h1 class="text-center mt-4">Update Team</h1>

<div class="container mt-4">
    <!-- Main form for updating and deleting -->
    <form method="post">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Team Information</h5>
                <hr />

                <div class="mb-3">
                    <label asp-for="Id" class="form-label">Team ID</label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Team Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="MembershipType" class="form-label">Membership Type</label>
                    <select asp-for="MembershipType" class="form-control" asp-items="Model.MembershipOptions">
                        <option value="">-- Select Membership Type --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="TrainerId" class="form-label">Trainer</label>
                    <select asp-for="TrainerId" class="form-control" asp-items="Model.TrainerOptions">
                        <option value="">-- Select a Trainer --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="DayOfWeek" class="form-label">Day of Week</label>
                    <input asp-for="DayOfWeek" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="TimeOfDay" class="form-label">Time of Day</label>
                    <input asp-for="TimeOfDay" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Length" class="form-label">Session Length (Hours)</label>
                    <input asp-for="Length" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="MinMember" class="form-label">Minimum Attendees</label>
                    <input asp-for="MinMember" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="MaxMember" class="form-label">Maximum Attendees</label>
                    <input asp-for="MaxMember" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary" formaction="?handler=Update">Update Team</button>
                    <button type="submit" class="btn btn-danger" formaction="?handler=Delete">Delete Team</button>
                </div>
            </div>
        </div>
    </form>

    <!-- Form for updating attendee list -->
    <form asp-page-handler="UpdateAttendeeList" method="post" class="mt-3 text-center">
        <input type="hidden" name="AttendeeListTeamId" value="@Model.Id" />
        <button type="submit" class="btn btn-secondary">Update Attendee List</button>
    </form>

</div>
