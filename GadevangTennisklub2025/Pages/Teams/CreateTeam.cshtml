@page
@model GadevangTennisklub2025.Pages.Teams.CreateTeamModel
@{
}
<h1>Create Team</h1>

<form method="post" onsubmit="return confirmAction();">
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" style="width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" style="width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MembershipType" class="control-label"></label>
        <input asp-for="MembershipType" style="width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DayOfWeek" class="control-label"></label>
        <input asp-for="DayOfWeek" style="width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TimeOfDay" class="control-label"></label>
        <input asp-for="TimeOfDay" style="width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Length" class="control-label"></label>
        <input asp-for="Length" style="width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MinMembers" class="control-label"></label>
        <input asp-for="MinMembers" style="width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MaxMembers" class="control-label"></label>
        <input asp-for="MaxMembers" style="width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" style="width: 30%;" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" asp-page-handler="Create" class="btn btn-primary">Create Team</button>
        <button type="submit" asp-page-handler="Cancel" class="btn btn-secondary">Cancel</button>
    </div>
</form>
@foreach (string s in Model.Messages)
{
    <p style="color:red">@s</p>

}

@section Scripts {
    <script>
        function confirmAction() {
            return confirm("Are you sure you want to create a team?");
        }
    </script>
}
